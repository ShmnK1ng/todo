<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TodoRegistrationFragment">


    <EditText
        android:id="@+id/fragment_todo_registration_edit_text_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_todo_registration_edit_text_password_margin_start"
        android:layout_marginTop="@dimen/fragment_todo_registration_edit_text_password_margin_top"
        android:layout_marginEnd="@dimen/fragment_todo_registration_edit_text_password_margin_end"
        android:autofillHints="emailAddress"
        android:hint="@string/fragment_todo_registration_edit_text_password_hint"
        android:inputType="textPassword"
        android:maxLines="1"
        android:minHeight="@dimen/fragment_todo_registration_edit_text_min_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/fragment_todo_registration_edit_text_constraint_width_max" />

    <EditText
        android:id="@+id/fragment_todo_registration_edit_text_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_todo_registration_edit_text_email_margin_start"
        android:layout_marginEnd="@dimen/fragment_todo_registration_edit_text_email_margin_end"
        android:autofillHints="Password"
        android:hint="@string/fragment_todo_registration_edit_text_email_hint"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:minHeight="@dimen/fragment_todo_registration_edit_text_min_height"
        app:layout_constraintBottom_toTopOf="@+id/fragment_todo_registration_edit_text_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_max="@dimen/fragment_todo_registration_edit_text_constraint_width_max" />

    <ImageView
        android:id="@+id/fragment_todo_registration_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/fragment_todo_registration_image_view_content_description"
        android:src="@drawable/logo_image"
        app:layout_constraintBottom_toTopOf="@+id/fragment_todo_registration_edit_text_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fragment_todo_registration_text_view_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/fragment_todo_registration_create_account"
        android:textColor="@color/fragment_todo_registration_text_view_create_account_text_color"
        android:textSize="@dimen/fragment_todo_registration_text_view_create_account_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_todo_registration_edit_text_password" />

    <ProgressBar
        android:id="@+id/fragment_todo_registration_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_todo_registration_edit_text_password" />

</androidx.constraintlayout.widget.ConstraintLayout>